#!/bin/bash
#PBS -q arm
#PBS -l select=1:ncpus=64
#PBS -l walltime=01:00:00
#PBS -joe

cd "$RUN_DIR" || exit 2

export OMP_NUM_THREADS=64
date

case "$MODEL" in
    omp)
        if [[ "$COMPILER" =~ (arm|llvm)- ]]; then
            OMP_PROC_BIND=true aprun -n 1 -d 64 -cc none "./$BENCHMARK_EXE"
        else
            aprun -n 1 -d 64 "./$BENCHMARK_EXE"
        fi
        ;;
    sycl|kokkos)
        OMP_PLACES=cores OMP_PROC_BIND=spread aprun -n 1 -d 64 -cc none "./$BENCHMARK_EXE" --deck "$SRC_DIR/../data/bm1"
        ;;
    *)
        echo "Unknown run configuration for model '$MODEL'"
        exit 1
        ;;
esac

